<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent" android:stretchColumns="1">
	<TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/TextVersion" android:text="@string/VERSION" android:gravity="right"></TextView>
	<TableRow android:layout_width="wrap_content"
		android:gravity="center_vertical" android:layout_height="wrap_content" android:layout_margin="2pt">
		<ToggleButton android:layout_height="wrap_content"
			android:layout_width="wrap_content" android:layout_marginRight="10px"
			android:id="@+id/RunButton" android:textOff="@string/BTN_STOPING"
			android:textOn="@string/BTN_RUNING" android:width="80px" android:height="60px"/>
		<TableLayout android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:layout_column="1" android:layout_marginRight="20px">
			<TextView android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textStyle="bold" android:textColor="#FFF" android:text="@string/TEXT_TITLE" android:width="40px"/>
			<TextView android:inputType="none" android:id="@+id/textView1" android:text="@string/TEXT_CONTENT" android:width="40px"></TextView>
</TableLayout>
</TableRow>

	<View android:layout_height="2dip" android:background="#FF909090" />

	<ScrollView android:id="@+id/ScrollView01"
		android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_weight="1">

		<LinearLayout android:id="@+id/LinearLayout01"
			android:layout_width="wrap_content" android:layout_height="wrap_content">
			<TextView android:id="@+id/logwindow" android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:editable="false"
				android:scrollbars="vertical" android:textColor="#FF00FF00" />
		</LinearLayout>
	</ScrollView>
</TableLayout>